{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["es2017", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"@kaiyeadu/api-interfaces": ["libs/api-interfaces/src/index.ts"],
			"@kaiyeadu/api-interfaces/*": ["libs/api-interfaces/src/*"],
			"@kaiyeadu/hooks": ["libs/hooks/src/index.ts"],
			"@kaiyeadu/ui": ["libs/ui/src/index.ts"],
			"@kaiyeadu/ui/*": ["libs/ui/src/*"],

			//api
			"$api/errors": ["apps/api/src/errors/index.ts"],
			"$api/middlewares": ["apps/api/src/middlewares/index.ts"],
			"$api/modules": ["apps/api/src/modules/index.ts"],
			"$api/root": ["apps/api/src/root/index.ts"],
			"$api/tools": ["apps/api/src/tools/index.ts"],
			"$api/types": ["apps/api/src/types/index.ts"],
			"$api/utilities": ["apps/api/src/utilities/index.ts"],
			"$api/errors/*": ["apps/api/src/errors/*"],
			"$api/middlewares/*": ["apps/api/src/middlewares/*"],
			"$api/modules/*": ["apps/api/src/modules/*"],
			"$api/root/*": ["apps/api/src/root/*"],
			"$api/tools/*": ["apps/api/src/tools/*"],
			"$api/types/*": ["apps/api/src/types/*"],
			"$api/utilities/*": ["apps/api/src/utilities/*"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
